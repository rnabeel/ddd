for attempt := 1; attempt <= maxRetries; attempt++ {
		resp, err := client.Do(req)
		if err != nil {
			// Log and retry on connection error
			response = upsertJobStatusResponse{
				Message: fmt.Sprintf("Failed to send the request on attempt %d: %v", attempt, err),
			}
			time.Sleep(2 * time.Second) // Add a delay between retries
			continue
		}

		defer resp.Body.Close()

		// Check if the status code is not 200
		if resp.StatusCode != http.StatusOK {
			response = upsertJobStatusResponse{
				Message: fmt.Sprintf("Attempt %d: Received non-200 status code: %d", attempt, resp.StatusCode),
			}
			time.Sleep(2 * time.Second) // Add a delay between retries
			continue
		}
